<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
  

  <%- include('./head.ejs'); %>
</head>
<body class="container">

<header>
  <%- include('./header.ejs'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>JS and CSS links scraped</h1>

    <input type="text" id="inputs">

    <button onclick="concats()">+ add url</button>

    <button onclick="getTitle()">Get Links</button>

    <br>
    <p id="url"></p>

    <% if(locals.address) {%>
      <table>
        <tr>
          <th>url</th>
          <th>styleLinkHrefs</th>
          <th>bodyScriptSrcs</th>
          <th>headScriptSrcs</th>
        </tr>
        <% address.forEach(val=>{ %>

        <% if(!val.error){ %>
        <tr>
          <td>
            <h5><%= val.url %></h5>
          </td>

          <td>
            <% val.headScriptSrcs.forEach(e=>{ %>
              <p><h1>*</h1><%=e%></p>
            <% }) %>
          </td>

          <td>
            <% val.bodyScriptSrcs.forEach(e=>{ %>
              <p><h1>*</h1><%=e%></p>
            <% }) %>
          </td>

          <td>
            <% val.styleLinkHrefs.forEach(e=>{ %>
              <p><h1>*</h1><%=e%></p>
            <% }) %>
          </td>
        </tr>

        <% }else{ %>
        <tr>
          <td>
            <h5><p><%=val.error %></p></h5>
          </td>
        </tr>
        <% } %>
        <% }); %>
      </table>
    <% } %>
    
    <!-- <div ng-controller="FirstController">
      {{message}}

      <input type="text">
      <button ng-click=""></button>
    </div> -->
    
  </div>

</main>

<footer>
  <%- include('./footer.ejs'); %>
</footer>

</body>
</html>